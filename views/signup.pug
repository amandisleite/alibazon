extends layout

block signup
  .container.px-5.mx-auto
    ul.breadcrumb.py-3.text-uppercase
      li.breadcrumb-item
        a(href='/') Home
      li.breadcrumb-item
        a(href=`/signup`) Sign Up

    h2 Sign Up
    p Register in Alibazon
    .row.align-items-center
      .col
        form(action="/signup", method="post")
          .form-group
            label.col-form-label Name
              if !errMessage
                input.form-control(type="text", name="username", placeholder="write your name", required)
              if errMessage
                input.form-control.border.border-danger(type="text", name="username", placeholder="write your name", required)
          .form-group
            label.col-form-label E-mail
              if !errMessage
                input.form-control(type="email", name="useremail", placeholder="name@email.com", required)
              if errMessage
                input.form-control.border.border-danger(type="email", name="useremail", placeholder="name@email.com", required)
          .form-group
            label.col-form-label Password
              if !errMessage
                input.form-control(type="password", name="userpassword", placeholder="create a password", required)
              if errMessage
                input.form-control.border.border-danger(type="password", name="userpassword", placeholder="create a password", required)
          button.btn.btn-outline-secondary.col-2.mt-3(type='submit') Register now
    section.pt-4
      if errMessage
        h3.fs-6.fw-light.text-danger= errMessage
        