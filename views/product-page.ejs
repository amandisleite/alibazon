<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head'); %>
        <title><%= product.page_title %></title>
    </head>
    <body class="container">
        <header>
            <%- include('partials/header'); %>
        </header>
        <main>
            <div class="container px-5 mx-auto">
                <% if (!errMessage) { %>
                    <ul class="breadcrumb py-3 text-uppercase">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/<%= category %>"><%= category %></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/<%= category %>/<%= mainCategory %>"><%= mainCategory %></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/<%= category %>/<%= mainCategory %>/<%= idSubcategory %>"><%= subcategory %></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/<%= category %>/<%= mainCategory %>/<%= idSubcategory %>/<%= idProduct %>"><%= product.name %></a>
                        </li>
                    </ul>
                    <div class="row mx-auto">
                        <div class="col card text-left my-3 mb-3 border-0">
                            <div class="row g-0 mx-5">
                                    <div class="col-md-5">
                                        <img src="/images/<%= product.image_groups[0].images[0].link %>" alt="product <%= product.name %> image"> 
                                    </div>
                                    <div class="col-md-7">
                                        <div class="card-body d-flex flex-column">
                                            <h2 class="card-title fs-2 fw-bold"><%= product.name %></h2>
                                            <p class="card-text fs-5 me-5"><%= product.page_description %></p>
                                            <div id="variants">
                                                <% const variantsAttributes = product.variation_attributes %>
                                                <% const variants = product.variants %>
                                                <% for (variantAttribute of variantsAttributes) { %>
                                                    
                                                    <form>
                                                        <p class="text-uppercase fw-bold fs-6 text-muted"><%= variantAttribute.name %></p>
                                                        <% if (variantAttribute.name === 'Color') { %>
                                                            <select
                                                            class="form-select btn-outline-info mb-4">
                                                            <option selected></option>
                                                            <% for (eachValue in variantAttribute.values) { %>
                                                                <% var variantColor = variantAttribute.values[eachValue].value %>
                                                                    <option
                                                                        value="<%= variantColor %>">
                                                                        <%= variantAttribute.values[eachValue].name %>
                                                                    </option>
                                                                <% } %>
                                                            </select>
                        
                                                        <% } %>
                                                        <% if (variantAttribute.name === 'Width') { %>
                                                            
                                                            <select
                                                            class="form-select btn-outline-info mb-4">
                                                            <option selected></option>
                                                            <% for (eachValue in variantAttribute.values) { %>
                                                                <% var variantWidth = variantAttribute.values[eachValue].value %>
                                                                    <option
                                                                        value="<%= variantWidth %>">
                                                                        <%= variantAttribute.values[eachValue].name %>
                                                                    </option>
                                                                <% } %>
                                                                </select>
                                                        <% } %>
                                                        <% if (variantAttribute.name === 'Size') { %>
                                                            <% for (eachValue in variantAttribute.values) { %>
                                                                <% var variantSize = variantAttribute.values[eachValue].value %>
                                                                <% console.log(variantSize) %>
                                                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                                                    <input
                                                                    type="radio"
                                                                    id="select-<%= variantSize %>"
                                                                    name="selectSize"
                                                                    autocomplete="off"
                                                                    class="btn-check"
                                                                    >
                                                                        <label
                                                                            class="btn btn-outline-info mb-4"
                                                                            for="select-<%= variantSize %>">
                                                                            <%= variantAttribute.values[eachValue].name %>
                                                                        </label>
                                                                    </div>
                                                                    <% } %>
                                                        <% } %>
                                                        
                                                    <% } %>
                                                        <% var productArray = {} %>
                                                        <% productArray.color = variantColor %>
                                                        <% productArray.width = variantWidth %>
                                                        <% productArray.size = variantSize %>
                                                        <% console.log(variantSize) %>
                                                        <% for (variant of product.variants) { %>
                                                            <% if (variant.variation_values.size === variantSize) { %>
                                                                <% console.log(variant.product_id) %>
                                                          <% } %>
                                                        <% } %>

                                                        <div class="mt-auto">
                                                            <p class="card-text fs-4 fw-bold text-muted">USD <%= product.price.toFixed(2) %></p>
                                                            <button class="btn btn-outline-secondary col-5" type="submit" onclick="">Buy now</button>
                                                        </div>
                                                    </form>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <section class="pt-4">
                <%- include('partials/error'); %>
            </section>
        </main>
        <footer class="footer">
            <div class="container text-center mt-5">
                <p>Copyright 2021 - OSF Digital</p>
            </div>
        </footer>
    </body>
